@model AnimeCentralWeb.Models.DomainViewModels.AnimeViewModel
@using AnimeCentralWeb.Utils
@using AnimeCentralWeb.Domain

<div class="content">
    <div class="content-header">
        <div class="title">EDITEAZA ANIME</div>
        <div class="description">@Model.Title (@Model.Type)</div>
    </div>
    <div class="commands text-right">
        <div class="anime-popup command" data-popup-clear="true" data-anime-id="@Model.Id"><i class="fa fa-chevron-left" aria-hidden="true"></i> Anime</div>
        <div class="close-pop-up command"><i class="fa fa-times" aria-hidden="true"></i></div>
    </div>
    <div class="content-body edit-anime-partial">
        <form asp-controller="Anime" asp-action="EditAnime" class="edit-anime-form custom-form">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
            </div>

            <div class="form-group">
                <label asp-for="Synonyms"></label>
                <input class="form-control" asp-for="Synonyms" />
            </div>

            <div class="form-group">
                <label asp-for="Score"></label>
                <input class="form-control" asp-for="Score" />

            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input class="form-control" asp-for="Image" />
            </div>

            <div class="form-group">
                <label asp-for="BigImage"></label>
                <input class="form-control" asp-for="BigImage" />
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <input class="form-control" asp-for="Status" />
            </div>

            <div class="form-group">
                <label asp-for="Type"></label>
                <input class="form-control" asp-for="Type" />
            </div>

            <div class="form-group">
                <label asp-for="Genres"></label>
                <input class="form-control" asp-for="Genres" data-list="@string.Join(",",AnimeUtils.Genres)" data-multiple/>
            </div>

            <div class="form-group">
                <label asp-for="NoOfEpisodes"></label>
                <input class="form-control" asp-for="NoOfEpisodes" />
            </div>

            <div class="form-group">
                <label asp-for="Synopsis"></label>
                <textarea asp-for="Synopsis" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="TranslateStatus"></label>
                <select asp-items="@Html.GetEnumSelectList<TranslateStatus>()" asp-for="TranslateStatus"  class="form-control"></select>
            </div>

            <input type="hidden" asp-for="MalId" />
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-save">Salveaza</button>
        </form>
    </div>
</div>
