@model LoginViewModel

<div class="content">
    <div class="content-header">
        <div class="title">LOGEAZA-TE</div>
        <div class="description">Daca ai un cont de sa nu-l folosesti.</div>
    </div>
    <div class="commands text-right">
        <i class="fa fa-times close-pop-up command" aria-hidden="true"></i>
    </div>
    <div class="content-body login-partial">
        <form class="login-form custom-form text-center">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger" style="display:inline-block"></div>
            <div class="form-group">
                <div>
                    <input asp-for="Username" class="form-control text-bold" />
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input asp-for="Password" class="form-control text-bold" />
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="checkbox" style="display:inline-block">
                        <label asp-for="RememberMe" class="text-bold">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <p>
                <a class="register-account cursor-pointer">Register as a new user?</a>
            </p>
            <p>
                <a class="forgot-password-popup cursor-pointer">Parola pierduta?</a>
            </p>
            <p>
                <a class="resend-activation-link-popup cursor-pointer">Retrimite email de verificare.</a>
            </p>
        </form>
    </div>
</div>

